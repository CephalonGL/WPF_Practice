<Window x:Class="Task_2_View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_View"
        xmlns:mainViewModel ="clr-namespace:Task_2_View_Model;assembly=Task_2_View-Model"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    
    <Grid>
        <ListView ItemsSource="{Binding FileButtons}"
                  SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:FileButton DataContext="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Command="{Binding AddItemCommand}"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom">
            <Image Source="\resources\icon-add.png" Height="16" Width="16"></Image>
        </Button>
    </Grid>
</Window>
