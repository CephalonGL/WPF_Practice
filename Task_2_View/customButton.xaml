<UserControl x:Name="customButton1" x:Class="Task_2_View.customButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Task_2_View"
             mc:Ignorable="d" Height="30" Width="230">
    <Grid Background="White">
        <Label x:Name ="fileNameLabel" 
               Content="File name" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Center" 
               Margin="10,0,0,0"/>
        <Button x:Name="Button" 
                HorizontalAlignment="Left" 
                Margin="200,0,0,0" 
                VerticalAlignment="Center" 
                RenderTransformOrigin="0.471,0.384">
            <Image Source="resources\icon-cross.png" Height="16" Width="16"></Image>
        </Button>

    </Grid>
</UserControl>
